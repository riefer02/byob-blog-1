<!DOCTYPE html>
<html lang="en">
  <%- include('layouts/header'); -%>
  <body>
    <%- include('layouts/navbar'); -%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/byob-collage-1.jpg');">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
